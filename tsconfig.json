{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "jest.config.js", "test/jest.setup.js", "__tests__/jest.setup.js", "__tests__/components/SidePanel.spec.js", "__tests__/utils/countryAlpha3Converter.spec.js", "__tests__/components/Button.spec.js"],
  "exclude": ["node_modules"]
}
